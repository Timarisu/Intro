@model IEnumerable<Intro.Models.Blog>

<div class="container p-3">
     @if (User.IsInRole(WC.UserRole))
     {
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Блог</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary">
                    <i class="fas fa-wine-bottle"></i> Cоздать новый Пост
                </a>
            </div>
        </div>
     }
     @if (User.IsInRole(WC.AdminRole))
    {
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Блог</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary">
                    <i class="fas fa-wine-bottle"></i> Cоздать новый Пост
                </a>
            </div>
        </div>
        <br /><br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style=" width:100%">
                <thead>
                    <tr>
                        <th>
                            Название Поста
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">@obj.Name</td>
                            <td class=" text-center">
                                <div class="w-50 btn-group" role="group">
                                    <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                        Редактировать
                                    </a>
                                    <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        Удалить
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Нет Имеющихся Постов.</p>
        }
    }
</div>