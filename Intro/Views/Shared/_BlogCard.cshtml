@model Intro.Models.Blog

<main class="container filter @Model.Category.Name.Replace(' ','_')">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary">@Model.Category.Name @Model.Author</strong>
            <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ImagePath@Model.Image" alt="Card image cap">
            <h1 class="mb-0 text-center">@Model.Name</h1>
            <p class="card-text mb-auto text-center">@Html.Raw(Model.Description)</p>
            <a asp-action="MainPost" asp-route-id="@Model.Id" class="stretched-link">Продолжить чтение</a>
        </div>
    </div>
</main>